
@{
    ViewData["Title"] = "RSVP";
}

@*show form if they did not submit*@
@if (ViewData["Submit"] == null)
{
    <h1>RSVP</h1>

    <form method="post">
        @*inputs for all the properties*@

        <label>First Name:</label>
        <input type="text" name="first-name" />
        <br />

        <label>Last Name:</label>
        <input type="text" name="last-name" />
        <br />

        <label>Phone Number:</label>
        <input type="text" name="phone" />
        <br />

        <label>Email:</label>
        <input type="text" name="email" />
        <br />

        <label>Date:</label>
        <input type="text" name="date" />
        <br />

        @*submit form*@
        <input type="submit" value="Submit" />
    </form>
}
else 
{
    <p>Thank you for your RSVP! Please check your email for confirmation.</p>
}


